{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "ES6",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "paths": {
        "@models/*": ["src/models/*"],
        "@services/*": ["src/services/*"]
      }
    },
    "include": ["**/*"],
    "exclude": ["node_modules"]
  }